<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <title>Desafio 5: EJS</title>
    </head>
    <body>
        <%- include('partials/navBar') %>
        <div class="container-sm">
            <div>
                <h1 class="text-bg-secondary p-3">Plantilla carga producto con ejs</h1>
            </div>
                    <form method='POST' action="/api/productos" enctype="application/x-www-form-urlencoded">
                        <div class='mb-3'>
                            <label class='form-label'>Producto:</label>
                            <input class='form-control' id='title' name='title' />
                        </div>
                        <div class='mb-3'>
                            <label class='form-label'>Precio:</label>
                            <input class='form-control' id='price' name='price' />
                        </div>
                        <div class='mb-3'>
                            <label class='form-label'>URL foto producto:</label>
                            <input class='form-control' id='thumbnail' name='thumbnail' />
                        </div>
                        <button type='submit' class='btn btn-primary'>Guardar</button>
                    </form>
                </div>
            </div>
        </div>
        <script src="/puclic/guardar.js"></script>
    </body>
</html>